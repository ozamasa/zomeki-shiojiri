<h2><%= @content.name %></h2>

<% if @node %>
<div class="navi"><%= link_to @node_uri, @node_uri, :target => "_blank" %></div>
<% end %>

<div class="actionMenu">
  <%= action_menu :new if Core.user.has_auth?(:designer) && Core.user.has_priv?(:create, :item => Core.concept) %>
  <%= action_menu :index %>
  <%= action_menu :show %>
  <%= action_menu :edit if safe{@item.editable?} %>
  <%= action_menu :destroy %>
</div>
