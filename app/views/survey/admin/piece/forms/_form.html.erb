<%= render(layout: 'survey/admin/piece/shared/form', locals: {f: f}) do -%>
<p class="form">詳細設定</p>

<table class="show">
  <tr>
    <th>リンク先</th>
    <td><%= f.array_select 'in_settings[target_form_id]',
                           @item.content.public_forms.map{|f| ["#{f.title}（#{f.name}）", f.id] }, include_blank: true %></td>
  </tr>
  <tr>
    <th>上部テキスト</th>
    <td><%= f.array_text_area 'in_settings[upper_text]', class: 'body' %></td>
  </tr>
  <tr>
    <th>下部テキスト</th>
    <td><%= f.array_text_area 'in_settings[lower_text]', class: 'body' %></td>
  </tr>
</table>
<%- end -%>
