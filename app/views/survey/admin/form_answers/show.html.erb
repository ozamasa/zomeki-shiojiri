<table class="show">
  <%- @item.answers.each do |answer| -%>
  <tr>
    <th><%= answer.question.title %></th>
    <td>
      <%- case answer.question.form_type -%>
      <%- when 'text_field' -%>
        <%= answer.content %>
      <%- when 'text_area' -%>
        <%=simple_format answer.content %>
      <%- when 'select' -%>
        <%= answer.content %>
      <%- when 'radio_button' -%>
        <%= answer.content %>
      <%- when 'check_box' -%>
        <%= answer.content %>
      <%- end -%>
    </td>
  </tr>
  <%- end -%>
  <tr>
    <th><%= @item.class.human_attribute_name :created_at %></th>
    <td><%=l @item.created_at %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :answered_url %></th>
    <td><%=link_to @item.answered_url_title, @item.answered_url, target: 'preview' %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :remote_addr %></th>
    <td><%= @item.remote_addr %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :user_agent %></th>
    <td><%= @item.user_agent %></td>
  </tr>
</table>
