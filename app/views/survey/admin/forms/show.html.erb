<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :state %></th>
    <td><%= @item.status.name %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :title %></th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :upper_text %></th>
    <td><%=raw @item.upper_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :lower_text %></th>
    <td><%=raw @item.lower_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :opened_at %></th>
    <td><%=l @item.opened_at rescue '' %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :closed_at %></th>
    <td><%=l @item.closed_at rescue '' %></td>
  </tr>
</table>
