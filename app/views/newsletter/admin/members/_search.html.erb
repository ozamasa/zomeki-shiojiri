<%= form_tag  '', :method => :get, :class => 'search' do %>

<table>
  <tr>
    <th>メールアドレス</th>
    <td ><%= text_field_tag 's_email', params[:s_email], :style => 'width: 350px;' %></td>

    <th>メール分類</th>
    <td ><%= select_tag 's_letter_type',
                        options_for_select(Newsletter::Member.new.letter_types, params[:s_letter_type]), include_blank: true %></td>

    <th>状態</th>
    <td ><%= select_tag 's_state', 
                        options_for_select([['有効', 'enabled'], ['無効', 'disabled']], params[:s_state]), include_blank: true %></td>


    <td class="submitters">
      <%= submit_tag '検索',     :name => :search %>
      <%= submit_tag 'リセット', :name => :reset %>
    </td>
  </tr>

</table>

<!-- end .search --><% end %>
