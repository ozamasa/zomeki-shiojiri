<div class="upper_text"><%= @piece.upper_text %></div>

<%- unless @banners.empty? -%>
<ul class="ad_banner">
  <%- @banners.each do |banner| -%>
  <li class="banner"><%= link_to image_tag("#{@piece.banner_node.public_uri}?i=#{banner.token}"), "#{@piece.banner_node.public_uri}?r=#{banner.token}", target: '_blank' %></li>
  <%- end -%>
</ul>
<%- end -%>

<div class="lower_text"><%= @piece.lower_text %></div>
