<%- unless @category_type.public_root_categories.empty? -%>
<div class="level1">
  <%- @category_type.public_root_categories.each do |category| -%>
  <section class="category <%= category.name -%><%= cycle '', ' cycle' %>">
    <h3><%= link_to category.title, category.public_uri %></h3>

    <%- if !category.public_children.empty? && @piece.layer == 'descendants' -%>
    <%= render 'categories', category: category %>
    <%- end -%>
    
  </section>
  <%- end -%>
</div>
<%- end -%>
