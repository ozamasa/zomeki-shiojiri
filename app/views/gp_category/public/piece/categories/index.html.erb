<div class="level1">
  <%- @root_categories.each do |category| -%>
  <section class="category <%= category.name -%><%= cycle '', ' cycle' %>">
    <h3><%= link_to category.title, category.public_uri %>
      <%= "(#{public_docs_with_category_id(category.id).count})" if @piece.num_docs_visible? %></h3>
    <%- unless category.public_children.empty? -%>
    <%= render 'category', category: category %>
    <%- end -%>
  </section>
  <%- end -%>
</div>
