<div class="contentGpCategoryCategoryType">
  <%- unless @children.empty? -%>
    <div class="h2"><%= @category.title %></div>
    <%- @children.each do |category| -%>
    <div class="category<%= category.name.try(:camelize) %>">・<%= link_to category.title, "#{category.category_type.public_uri}#{category.path_from_root_category}/" %></div>
    <%- end -%>
  <%- end -%>

  <%- unless @docs.empty? -%>
    <div class="h2">記事一覧</div>
    <%- @docs.each do |doc| -%>
    <div class="doc">・<%= render 'gp_article/public/shared/doc', doc: doc, list_style: @content.list_style, date_style: @content.date_style %></div>
    <%- end -%>
  <%- end -%>

  <%= paginate @docs %>
</div>
