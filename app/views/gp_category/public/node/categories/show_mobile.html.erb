<div class="contentGpCategoryCategoryType">
  <%- unless @category.public_children.empty? -%>
    <div class="h2"><%= @category.title %></div>
    <%- @category.public_children.each do |category| -%>
    <div class="category<%= category.name.try(:camelize) %>">・<%= link_to category.title, "#{category.category_type.public_uri}#{category.path_from_root_category}/" %></div>
    <%- end -%>
  <%- end -%>

  <%- unless @category.public_docs.empty? -%>
    <div class="h2">記事一覧</div>
    <%- @category.public_docs.each do |doc| -%>
    <div class="doc">・<%= render 'gp_category/public/shared/doc', doc: doc, list_style: @content.list_style, date_style: @content.date_style %></div>
    <%- end -%>
  <%- end -%>
</div>
