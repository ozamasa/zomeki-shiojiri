<h1>カテゴリ</h1>
<%- if @category.children.empty? -%>
  <div>該当なし</div>
<%- else -%>
  <ul>
    <%- @category.children.each do |category| -%>
    <li><%= link_to category.title,
                    "#{category.category_type.public_uri}#{category.path_from_root_category}/" %></li>
    <%- end -%>
  </ul>
<%- end -%>

<h2>記事</h2>
<%- if @category.public_docs.empty? -%>
  <div>該当なし</div>
<%- else -%>
  <ul>
    <%- @category.public_docs.each do |doc| -%>
    <li>
      <%- if doc.target.present? -%>
        <%- if doc.href.present? -%>
          <%= link_to doc.title, doc.href, target: doc.target %>
        <%- else -%>
          <%= doc.title -%>
        <%- end -%>
      <%- else -%>
        <%= link_to doc.title, doc.public_uri %>
      <%- end -%>
    </li>
    <%- end -%>
  </ul>
<%- end -%>
