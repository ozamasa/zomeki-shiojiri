<%-
  image = if (file = doc.image_files.first)
            image_tag "#{file.parent.content.public_node.public_uri}#{file.parent.name}/file_contents/#{url_encode file.name}"
          else
            ''
          end
-%>
<%= @content.category_type_doc_style.gsub('@title', h(doc.title))
                                    .gsub('@subtitle', h(doc.subtitle))
                                    .gsub('@publish_date', h(l(doc.display_published_at)))
                                    .gsub('@update_date', h(l(doc.display_updated_at)))
                                    .gsub('@summary', h(doc.summary))
                                    .gsub('@group', h(doc.creator.group.name))
                                    .gsub('@category', h(doc.categories.map(&:title).join(', ')))
                                    .gsub('@image', image).html_safe %>
