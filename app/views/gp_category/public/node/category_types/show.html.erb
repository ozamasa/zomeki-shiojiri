<h1>カテゴリ</h1>
<%- if @category_type.root_categories.empty? -%>
  <div>該当なし</div>
<%- else -%>
  <ul>
    <%- @category_type.root_categories.each do |category| -%>
    <li><%= link_to category.title,
                    "#{category.category_type.public_uri}#{category.path_from_root_category}/" %></li>
    <%- end -%>
  </ul>
<%- end -%>
