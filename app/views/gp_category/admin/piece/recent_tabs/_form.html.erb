<%= render(layout: 'gp_category/admin/piece/shared/form', locals: {f: f}) do -%>
<p class="form">詳細設定</p>

<table class="show">
  <tr>
    <th><%= @item.locale :list_count %></th>
    <td><%= f.array_text_field 'in_settings[list_count]', class: 'number' %></td>
  </tr>
  <tr>
    <th><%= @item.locale :date_style %></th>
    <td colspan="3"><%= f.array_text_field 'in_settings[date_style]', size: 50 %> <%=raw t('comments.date_style') %></td>
  </tr>
  <tr>
    <th><%= @item.locale :list_style %></th>
    <td colspan="3"><%= f.array_text_field 'in_settings[list_style]', size: 50 %> <%=raw t('comments.list_style') %></td>
  </tr>
  <tr>
    <th><%= @item.locale :more_label %></th>
    <td><%= f.array_text_field 'in_settings[more_label]', class: 'name' %></td>
  </tr>
</table>
<%- end -%>
