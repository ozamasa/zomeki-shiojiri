<span class="note">※は必須項目です。</span>

<table class="show">
  <tr>
    <th><%= f.label :name %> <span class="note">※</span></th>
    <td><%= f.text_field :name, class: 'name' %>（使用可能文字： 半角英数字,_,-）</td>
  </tr>
  <tr>
    <th><%= f.label :title %> <span class="note">※</span></th>
    <td><%= f.text_field :title, class: 'title' %></td>
  </tr>
  <tr>
    <th><%= f.label :style %></th>
    <td><%= f.radio_buttons :style, @item.class::STYLE_OPTIONS, :class => 'style' %></td>
  </tr>
  <tr>
    <th><%= f.label :sort_no %></th>
    <td><%= f.text_field :sort_no, class: 'number' %></td>
  </tr>
  <tr>
    <th><%= f.label :input_method %></th>
    <td><%= f.select :input_method, options_for_select(@item.class::METHOD_OPTIONS, @item.input_method), include_blank: true %></td>
  </tr>
  <tr>
    <th><%= f.label :input_option %></th>
    <td><%= f.text_area :input_option, rows: '5' %><br>改行区切りで指定します。</td>
  </tr>
</table>
