<table class="show">
  <tr>
    <th><%= @item.locale :title %></th>
    <td><%= @item.title %></td>
  </tr>
</table>

<br /><p class="form">リンク設定</p>
<table class="show">
  <tr>
    <th><%= @item.locale :href %></th>
    <td><%= link_to(@item.href, @item.href, target: '_blank') if @item.href.present? %></td>
    <td><%= @item.class::TARGET_OPTIONS.detect{|to| to.last == @item.target }.try(:first) %></td>
  </tr>
  <tr>
    <th><%= @item.locale :subtitle %></th>
    <td colspan="2"><%= @item.subtitle %></td>
  </tr>
  <tr>
    <th><%= @item.locale :summary %></th>
    <td colspan="2"><%= @item.summary %></td>
  </tr>
</table><br />

<table class="show">
  <tr>
    <th colspan="2"><%= @item.locale :body %></th>
  </tr>
  <tr>
    <td colspan="2"><%=sanitize @item.body.gsub('"file_contents/', %Q("#{gp_article_doc_path(@content, id: @item.id)}/file_contents/)),
                                attributes: %w(style class href src alt title) %></td>
  </tr>
</table>
