<table class="show">
  <tr>
    <th><%= @item.locale :title %></th>
    <td><%= @item.title %></td>
  </tr>
</table>

<table class="show">
  <tr>
    <th><%= @item.locale :href %></th>
    <td><%= link_to_unless(@item.target == 'attached_file', @item.href, @item.href, target: '_blank') if @item.href.present? %></td>
    <td><%= @item.class::TARGET_OPTIONS.detect{|to| to.last == @item.target }.try(:first) %></td>
  </tr>
  <tr>
    <th><%= @item.locale :subtitle %></th>
    <td colspan="2"><%= @item.subtitle %></td>
  </tr>
  <tr>
    <th><%= @item.locale :summary %></th>
    <td colspan="2"><%= @item.summary %></td>
  </tr>
</table>

<table class="show">
  <tr>
    <th colspan="2"><%= @item.locale :body %></th>
  </tr>
  <tr>
    <td colspan="2"><%=sanitize @item.body.gsub('"file_contents/', %Q("#{gp_article_doc_path(@content, id: @item.id)}/file_contents/)) %></td>
  </tr>
</table>

<%- unless @category_types.empty? -%>
<table class="show">
  <%- @category_types.each do |category_type| -%>
  <tr>
    <th><%= category_type.title %></th>
    <td><%= @item.categories.where(category_type_id: category_type.id).map(&:title).join(', ') %></td>
  </tr>
  <%- end -%>
</table>
<%- end -%>

<%= google_map_view @item %>
<%= inquiry_view @item %>
<%= task_view @item %>
<%= recognizer_view @item %>
<%= editable_group_view @item %>
<%= creator_view @item %>
