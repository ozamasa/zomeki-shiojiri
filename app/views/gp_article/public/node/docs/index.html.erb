<div class="contentGpArticleDocs">
  <div class="docs">
    <% @items.each_with_index do |item, idx| %>
    <%- if item[:date] -%><%= '</ul>'.html_safe unless idx.zero? -%>
    <h2 class="date"><%= item[:date] %></h2><ul>
    <%- end -%>
    <li>
      <%- if item[:doc].target.present? -%>
        <%= link_to item[:doc].title, item[:doc].href, target: item[:doc].target %>
      <%- else -%>
        <%= link_to item[:doc].title, item[:doc].public_uri %>
      <%- end -%>
    </li>
    <%- end -%>
    <%= '</ul>'.html_safe unless @items.empty? -%>
  </div>
  <%= paginate @docs %>
</div>
