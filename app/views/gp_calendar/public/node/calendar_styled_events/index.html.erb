<div class="calendarEvents calendarCalendarEvents">
  <h2><%= @date.year %>年<%= @date.month %>月</h2>

  <div class="pagination upperPagination">
    <%- if @date.prev_month < @min_date -%>
    <span class="disabled prev_page">前の月</span>
    <%- else -%>
    <%= link_to '前の月', @node.public_uri + @date.prev_month.strftime('%Y/%m/'), class: 'prev_page' %>
    <%- end -%>
    <span class="separator">|</span>
    <%- if @date.next_month > @max_date -%>
    <span class="disabled next_page">次の月</span>
    <%- else -%>
    <%= link_to '次の月', @node.public_uri + @date.next_month.strftime('%Y/%m/'), class: 'next_page' %>
    <%- end -%>
  </div>

  <table border="1">
    <thead class="wdays">
      <tr>
        <th class="wday sun">日</th>
        <th class="wday mon">月</th>
        <th class="wday tue">火</th>
        <th class="wday wed">水</th>
        <th class="wday thu">木</th>
        <th class="wday fri">金</th>
        <th class="wday sat">土</th>
      </tr>
    </thead>
    <tbody class="days">
      <%- @weeks.each do |week| -%>
      <tr class="week">
        <%- week.each do |day| -%>
        <td class="day <%= %w!sun mon tue wed thu fri sat![day.wday] %><%= ' prevMonth' if day < @date.beginning_of_month %><%= ' nextMonth' if day > @date.end_of_month %>">
          <p class="date"><%= day.day %></p>
          <%- unless (events = @events.select{|e| day.between?(e.started_on, e.ended_on) }).empty? -%>
          <ul>
            <%- events.each do |event| -%>
            <li>
              <p class="title"><%= link_to_if event.href.present?, event.title, event.href, target: event.target %></p>
              <%- unless event.categories.empty? -%>
              <p class="category">
                <%- event.categories.each do |category| -%>
                <span class="category<%= category.name.capitalize %>"><%= category.title %></span>
                <%- end -%>
              </p>
              <%- end -%>
            </li>
            <%- end -%>
          </ul>
          <%- end -%>
        </td>
        <%- end -%>
      </tr>
      <%- end -%>
    </tbody>
  </table>

  <div class="pagination lowerPagination">
    <%- if @date.prev_month < @min_date -%>
    <span class="disabled prev_page">前の月</span>
    <%- else -%>
    <%= link_to '前の月', @node.public_uri + @date.prev_month.strftime('%Y/%m/'), class: 'prev_page' %>
    <%- end -%>
    <span class="separator">|</span>
    <%- if @date.next_month > @max_date -%>
    <span class="disabled next_page">次の月</span>
    <%- else -%>
    <%= link_to '次の月', @node.public_uri + @date.next_month.strftime('%Y/%m/'), class: 'next_page' %>
    <%- end -%>
  </div>
<!-- end .calendarEvents --></div>
