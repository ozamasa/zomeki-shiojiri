<div id="content">
  <div class="actionMenu" style="margin: 2px 0px 4px 0px;">
    <%= action_menu :index, gp_calendar_event_files_path(@content, event_id: @event_id) %>
    <%= action_menu :show, gp_calendar_event_file_path(@content, event_id: @event_id, id: @item.id) unless @item.new_record? %>
    <%= action_menu :edit, edit_gp_calendar_event_file_path(@content, event_id: @event_id, id: @item.id) if !@item.new_record? && @item.editable? %>
    <%= action_menu :destroy, gp_calendar_event_file_path(@content, event_id: @event_id, id: @item.id) if !@item.new_record? && @item.deletable? %>
  </div>
</div>
